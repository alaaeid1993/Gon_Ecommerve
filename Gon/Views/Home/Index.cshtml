   @model List<Product> 

        
<!-----------------------------------Start nav------------------------------------------------------ -->
        <div class="row" data-aos="fade-up">
          <div class="col-lg-12 d-flex justify-content-center">
            <ul id="portfolio-flters">
               <li data-filter="*" class="filter-active">All</li>
                @foreach (var item in ViewBag.cate)
               {
                <li data-filter=".filter-@item.Fillter">@item.Name</li>
               }
            </ul>
          </div>
        </div>
<!-----------------------------------end nav ----------------------------------------------------------->

<!-----------------------------------start product------------------------------------------------------ -->
        <div class="row portfolio-container" data-aos="fade-up" data-aos-delay="100">
            @foreach (var item in Model)
           {
              <div class="col-lg-4 col-md-6 portfolio-item filter-@item.Fillter">
                <div class="portfolio-wrap">
                  <img src="/img/portfolio/@item.Photo" class="img-fluid" alt="">
                  <div class="portfolio-links">
                    <a href="/img/portfolio/@item.Photo" data-gallery="portfolioGallery"style="cursor:pointer;padding:7px" class="portfolio-lightbox" title="Zoom" ><i class="bx bx-zoom-in"></i></a>
                    <a  asp-action="create" asp-controller="Carts" title="Add To Card"onclick="add()" style="cursor:pointer;padding:7px"><i class="bx bx-plus"></i></a>
                    <a href="portfolio-details.html" title="More Details"style="cursor:pointer;padding:7px"><i class="bx bx-link"></i></a>
                  </div>
                </div>
              </div>
           }
        </div>
<!-----------------------------------end product------------------------------------------------------- -->
        
